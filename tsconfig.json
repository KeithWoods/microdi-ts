{
    "compilerOptions": {
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ES6",
        "module": "commonjs",
        "noEmit": false,
        "outDir": "./.bin"
    },
    "include": [
        "./src/**/*",
        "./tests/**/*"
    ]
}
